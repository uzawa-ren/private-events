<%= form_with model: @event do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %> <br>
  <%= form.label :location %>
  <%= form.text_field :location %> <br>
  <%= form.label :date %>
  <%= form.datetime_local_field :date %> <br>
  <%= form.label :description %>
  <%= form.text_area :description %> <br>
  <%= form.submit "Create event" %>
<% end%>